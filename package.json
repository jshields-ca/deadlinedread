{
  "name": "deadlinedread",
  "private": true,
  "version": "1.7.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "release": "release-it"
  },
  "release-it": {
    "github": {
      "release": true,
      "tokenRef": "GITHUB_TOKEN"
    },
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "Release ${version}",
      "tagName": "${version}"
    }
  },
  "devDependencies": {
    "release-it": "^19.0.4",
    "vite": "^7.0.4"
  }
}

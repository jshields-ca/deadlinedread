{
  "name": "deadlinedread",
  "private": true,
  "version": "2.0.6",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "release": "release-it",
    "update-readme-version": "node scripts/update-readme-version.js",
    "sync-docs": "node scripts/sync-documentation.js"
  },
  "release-it": {
    "github": {
      "release": true,
      "tokenRef": "GITHUB_TOKEN"
    },
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "Release ${version}",
      "tagName": "${version}"
    },
    "hooks": {
      "before:init": [
        "node scripts/update-readme-version.js"
      ],
      "after:bump": "node scripts/sync-documentation.js && git add README.md index.html CHANGELOG.md && git commit -m 'docs: sync version references after bump'"
    }
  },
  "devDependencies": {
    "release-it": "^19.0.4",
    "vite": "^7.0.4"
  }
}
